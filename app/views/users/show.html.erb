<div class="row">
	<div class="col-xs-3">
<h2>User info</h2>
<%= render 'users/profile', user: @user %>


<% unless  @user.id == current_user.id  %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
             html: { method: :delete }) do |f| %>
  <%= f.submit "フォロー外す", class: "btn btn-primary" %>
<% end %>
  <% else %>
    <%= form_for(current_user.active_relationships.build) do |f| %>
  <div><%= hidden_field_tag :followed_id, @user.id %></div>
  <%= f.submit "フォローする", class: "btn btn-primary" %>
<% end %>
  <% end %>
  </div>
<% end %>

<!--同コントローラーのviewで表示ならusersは省略可 -->



<h2>New book</h2>
<%= render 'books/newform', book: @book %>
</div>
<div class="col-xs-9">
<h2>Books</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= link_to do %>
				<%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
				<% end %>
			</td>
			<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
			<td><%= book.body %></td>
			<td style="text-align: center;">
						<div class="glyphicon glyphicon-comment"></div>
						<a href="#comments"><%= book.book_comments.count %></a>
					</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
<!--books一覧 -->

